{% extends 'base.html.twig' %}

{% block title %}Create New Product{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Create New Product</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                
                <!-- Name Field -->
                <div class="col-md-6">
                    <div class="form-floating">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Product Name'}}) }}
                        {{ form_label(form.name, 'Product Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>

                <!-- Description Field -->
                <div class="col-md-6">
                    <div class="form-floating">
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Product Description'}}) }}
                        {{ form_label(form.description, 'Product Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>

                <!-- Price Field -->
                <div class="col-md-6">
                    <div class="form-floating">
                        {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Product Price'}}) }}
                        {{ form_label(form.price, 'Product Price', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_errors(form.price) }}
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100">{{ button_label|default('Save') }}</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

        <!-- Back to List -->
        <div class="mt-3">
            <a href="{{ path('product_index') }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
{% endblock %}
