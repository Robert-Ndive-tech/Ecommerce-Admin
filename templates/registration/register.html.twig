{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <!-- Flash messages for email verification errors -->
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-center mb-4">Register</h1>

    <!-- Responsive form container -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- Form errors displayed -->
                {% if form_errors(registrationForm) %}
                    <div class="alert alert-danger">
                        {{ form_errors(registrationForm) }}
                    </div>
                {% endif %}

                <!-- Form start with Bootstrap form classes -->
                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <!-- Name field with Bootstrap styling -->
                <div class="form-group mb-3">
                    {{ form_label(registrationForm.name, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter your name'}}) }}
                    <div class="invalid-feedback">
                        Please provide your name.
                    </div>
                </div>

                <!-- Email field with Bootstrap styling -->
                <div class="form-group mb-3">
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                    <div class="invalid-feedback">
                        Please provide a valid email.
                    </div>
                </div>

                <!-- Password field with Bootstrap styling -->
                <div class="form-group mb-3">
                    {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Enter your password'}}) }}
                    <div class="invalid-feedback">
                        Password must be at least 6 characters.
                    </div>
                </div>

                <!-- Agree to terms checkbox with Bootstrap styling -->
                <div class="form-group form-check mb-3">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    <div class="invalid-feedback">
                        You must agree to the terms.
                    </div>
                </div>



                <!-- Register button styled with Bootstrap -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
            
                </div>

                

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
